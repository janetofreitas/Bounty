        <script src="https://unpkg.com/filepond-plugin-image-resize/dist/filepond-plugin-image-resize.js"></script>
        <title>Bounty</title>
    </head>
    
    <body>
        <header class="o-header">
            <nav> 
                <div class="logo"><a href="/home" class="logoHeader"><img src="../assets/logoP.png" alt=""></a></div>
          
                <form action="/pesquisar" method="POST">
                  <input type="search" class="search-data" placeholder="Pesquisar" required>
                  <button type="submit" ><img src="../assets/searchIcon.png" alt=""></button>
                </form>
                
                <div class="mangue"><h4 class="h1nav">Olá <%= name %> <br> <a href="/" id="navlogout">Logout</a></h4></div>
        
                <div class="userarea">
                    <a href="/perfil" class="logoHeader"><img class="fotoHeader" src="Images/<%=mail%>.png" alt=" "></a>  
                </div>
              </nav>  
        </header>
        <aside class="o-logo">
         <div class="fcontainer">
                <img class="fotoPerfil" src="Images/<%=mail%>.png" alt="Perfil sem imagem">
               <form action="/upload" method="POST" enctype="multipart/form-data">
                <input class="form-control-file" type="file"  name="image"/> 
                <button class="sBotao"  type="submit">Salvar</button>
               </form>

                <form action="/editarPerfil" method="POST" >
                    
                    <h4 class="tituloCriar">Nome</h4>
                    <label class="sr-only" for="name">Nome</label>
                    <input type="text" id="name" class="input-forms" placeholder="Nome" name="name" required value="<%= NOME %>"> 
                    
                    <h4 class="tituloCriar">Bio</h4>
                    <label class="sr-only" for="bio">Bio</label>
                    <input type="text" id="bio" class="input-forms" placeholder="Bio"name="bio" required value="<%= BIO %>">
                    
                    <h4 class="tituloCriar">Telefone</h4>
                    <label class="sr-only" for="tel">Telefone</label>
                    <input type="tel" id="tel" class="input-forms" placeholder="Telefone" name="tel" required value="<%= TELEFONE %>">

                    <h4 class="tituloCriar">CEP</h4>
                    <label class="sr-only" for="cep">CEP</label>
                    <input type="cep" id="cep" class="input-forms" placeholder="CEP"name="cep" required value="<%= CEP %>">
                    
                    <h4 class="tituloCriar">Endereço</h4>
                    <label class="sr-only" for="endereco">Endereço</label>
                    <input type="text" id="endereco" class="input-forms" placeholder="Endereço" name="endereco" required value="<%= ENDERECO %>">
                    <br><br>
                    
                    <div class="cdl">
                        <button class="aBotao" type="submit">Salvar</button>
                    </div>
                    
                    
                </form>
          </div>
        </aside>
    
        <main class="o-form">
            
        </main>
        
    <footer class="o-footer footer-dark">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-md-3 item">
                        <ul>
                            <li><a href="/home">Home</a></li>
                            <li><a href="/perfil">Meu perfil</a></li>
                            <li><a href="/faq">F.A.Q</a></li>
                        </ul>
                    </div>
                    <div class="col-md-6 item text">
                        <h3>Bounty</h3>
                        <p>Faz uma bounty você tambem! ಠ_ಠ</p>
                    </div>
                    <div class="col item social">
                        <a href="#"><i class="fab fa-facebook"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="https://github.com/janetofreitas/Bounty"><i class="fab fa-github"></i></a>
                    </div>
                </div>
                <p class="copyright">Bounty © 2021</p>
            </div> 
    
    </footer>
    
    </body>
    
</html>