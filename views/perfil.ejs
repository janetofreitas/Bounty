                <hr class="linha_vertical"/>
                <h4>Descrição: <br> <%= bountyDescription %></h4>
                <hr class="linha_vertical"/>
                <h4>Restrições: <br><%= bountyRestrictions %></h4>
                <hr class="linha_vertical"/>
                <img class="imgBounty"  src="/public/assets/Bounty_home_img.jpg">
                <hr class="linha_vertical"/>
                <div class="bBotao">
                    <a href= <%= bountyPerfil1 %> >Acessar</a>
                </div>
            </div>
        
